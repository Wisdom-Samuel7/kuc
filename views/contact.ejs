    form {
        width: 90%;
        height: 80%;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 1em;

    }

    input {
        padding: 1em 1em;
        border: none;
        border-radius: .02px;
        background: transparent;
        border-bottom: 0px solid grey;
        color: lightgreen;
        font-weight: bolder;
        font-family: sans-serif;
        border: none;
        border-bottom: .3px solid aquamarine;
        border-radius: .1em;
        width: 20em;
        background: transparent;
    }

    button {
        padding: 1em 1em;
        border: none;
        border-radius: .02px;
        background: aqua;
        border-bottom: 0px solid grey;
        color: crimson;
        font-weight: bolder;
        font-family: 'Courier New', Courier, monospace;
        border: .3px solid rgba(100, 0, 0, .7);
        border-radius: .5em;
        width: 80%;
        letter-spacing: .5em;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1em;

    }

    textarea {
        background: powderblue;
        color: blanchedalmond;
        padding: .5em .5em;
        margin-top: 1em;
        border: none;
        width: 80%;
        border-radius: .6em;
        border: .3px solid rgba(100, 100, 100, .7);
        border-radius: .5em;
    }

    h1 {
        font-size: 2em;
        font-family: monospace;
        color: #fff;
    }

    @media screen and (min-width:768px) {
        nav ul {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: center;
            color: #fff;
        }

        .menu {
            display: none;
        }

        nav ul li {
            margin-right: 3.5em;
        }

        nav li a {
            color: #fff;
        }

        .mobile {
            display: none;
        }

        .mobile:target {
            display: none;
        }
    }
</style>


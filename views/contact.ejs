<style>
    * {
        margin: 0;
        padding: 0;
        outline: none;
        box-sizing: border-box;
        text-decoration: none;
        list-style: none;
        font-weight: bolder;

    }

    a {
        cursor: pointer;
    }

    nav {
        width: 100%;
        background: #000;
        height: fit-content;
        padding: 30px 0em;
        display: flex;
        justify-content: space-around;
        align-items: center;

    }

    nav ul {
        display: none;
    }

    nav .h1 {
        color: #fff;
        font-weight: bolder;
        font-size: x-large;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    nav span {
        color: aqua;
    }

    .mobile {
        display: none;
        width: 40vw;
        height: 120vh;
        position: fixed;
        top: 3em;
        right: 3em;
        background: darkgoldenrod;
        display: none;
        z-index: 10000;
        transition: 1s;
        padding: 1em 1em;
    }

    .mobile:target {
        width: 50vw;
        height: 120vh;
        position: fixed;
        top: 0em;
        right: 0;
        background: black;
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        justify-content: flex-start;
        padding: 2em 0;
        align-items: center;
        z-index: 10000;
        animation: mobilemenu .5s forwards ease-in-out;
    }

    @keyframes mobilemenu {
        from {
            right: -3em;
            opacity: 0;
        }

        to {
            right: 0;
            opacity: 1;
        }
    }

    .mobile ul {
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        gap: 2em;
        margin-bottom: 2em;
        animation: softslide .4s forwards ease-in;
        animation-delay: .2s;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    @keyframes softslide {
        from {
            transform: translateX(6em);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .mobile li a {
        color: beige;
    }

    h6 {
        font-size: smaller;
        word-spacing: 2em;
        margin: 3em 0;
        color: greenyellow;
    }

    .mobile-svg {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1em;
        margin-top: 2em;
    }

    section {
        width: 100vw;
        height: 90vh;
        background: #000;
        color: #fff;
        position: relative;
        background: linear-gradient(rgba(0, 0, 0, 1), rgba(100, 100, 20, .3)), url("https://img.freepik.com/premium-photo/fun-3d-cartoon-medieval-man_183364-115453.jpg?w=740");
        background-position: left;
        background-attachment: fixed;
        background-size: cover;
        padding: 3em 0em;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    /* 
    section {
        width: 100vw;
